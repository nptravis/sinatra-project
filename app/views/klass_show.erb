<h1>Class Show Page</h1>

<h3>Class: <%= @klass.name %></h3>
<p><%= @klass.description %></p>
<h4>Teacher: <a href="/users/<%= @teacher.slug %>"><%= @teacher.username %></a></h4>
<% if @klass.users %>
	<h4>Users:</h4>
	<ul>
		<% @klass.users.each do |student| %>
		<li><a href="/students/<%=student.slug%>"><%= student.name_join %></a></li>
		<% end %>
	</ul>
<% else %>
	<h4>This class has no students!</h4>
<% end %>



<div class="comment-feed">
	


</div>

<% if logged_in? %>
	<div class="klass-create-comments">
		<form method="post" action="/klasses/comments/new">
			<label>Post a comment</label>
			<textarea name="comment[content]"></textarea>
			<input type="submit" value="Post">
		</form>
	</div>
<% end %>
